<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="WindowTitleBackground">     
        <item name="android:background">@color/titlebackgroundcolor</item>                   
    </style>
    
    <style name="CustomTheme01" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/CustomActionbarTheme01</item>
	    <item name="android:actionBarWidgetTheme">@style/Theme.stylingactionbar.widget</item>
	    <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
    </style>
    
    <style name="CustomActionbarTheme01" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:displayOptions">showHome</item>
        <item name="android:background">@drawable/ab_solid_example</item>
    </style>
    
    <style name="Theme.stylingactionbar.widget" parent="@android:style/Theme.Holo">
    	<item name="android:popupMenuStyle">@style/PopupMenu</item>
    	<item name="android:textColor">#333333</item>    	
	</style>
    
    <style name="PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
    	<item name="android:popupBackground">@color/actionbar_color</item>    
	</style>
	
    <style name="MyCustomTheme.OverFlow" parent="@android:style/Widget.ActionButton.Overflow">
	    <item name="android:src">@drawable/overflow_icon</item>
	</style>
	
    <color name="clr_title_gold">#F4C91C</color>

</resources>
